<Window x:Class="StencilGApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" WindowStartupLocation="CenterScreen" MinHeight="150" MinWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Border Grid.Column="0" Margin="5" ClipToBounds="true">
            <Canvas x:Name="canvasWorkArea"  HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Canvas.LayoutTransform>
                    <ScaleTransform ScaleX="1" ScaleY="-1" CenterX=".5" CenterY=".5" />
                </Canvas.LayoutTransform>
            </Canvas>
        </Border>

        <StackPanel Grid.Column="1">
            <Button x:Name="btnLoadGerber" Content="Load Gerber" Grid.Column="1" Margin="5" Height="25" Click="btnLoadGerber_Click"/>
            <Button x:Name="btnConvert" Content="Convert" Grid.Column="1" Margin="5" Height="25" Click="btnConvert_Click"/>
        </StackPanel>
    </Grid>
</Window>
